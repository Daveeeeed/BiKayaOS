# Cross toolchain variables
# If these are not in your path, you can make them absolute.
XT_PRG_PREFIX = arm-none-eabi-
CC = $(XT_PRG_PREFIX)gcc
LD = $(XT_PRG_PREFIX)ld

# uARM-related paths
UARM_DIR = ./uarm
INCLUDE_DIR = ./bikaya
INCLUDE_PCB = ./bikaya/pcb
INCLUDE_ASL = ./bikaya/asl

# Compiler options
CFLAGS_LANG = 
CFLAGS_UARM = -mcpu=arm7tdmi -DTARGET_UARM=1
CFLAGS = $(CFLAGS_LANG) $(CFLAGS_UARM) -I$(UARM_DIR) -I$(UARM_DIR)/uarm -I$(INCLUDE_DIR) -I$(INCLUDE_PCB) -I$(INCLUDE_ASL) -Wall -O0

# Linker options
LDFLAGS = -G 0 -nostdlib -T $(UARM_DIR)/elf32ltsarm.h.uarmcore.x

# Add the location of crt*.S to the search path
VPATH = $(UARM_DIR)

.PHONY : all clean

all : kernel

kernel : p1test_bikaya_v0.o bikaya/asl/asl.o bikaya/pcb/pcb.o crtso.o libuarm.o
	$(LD) -o $@ $^ $(LDFLAGS)

clean:
	-rm -f bikaya/*.o bikaya/pcb/*.o bikaya/asl/*.o kernel kernel.*.uarm

# Pattern rule for assembly modules
%.o : %.s
	$(CC) $(CFLAGS) -c -o $@ $<